@model List<Products>

<div class="toast align-items-left text-white bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body">
            <partial name="_PartialNotificationView" />
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Product List </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">
            <div class="row m-2 pt-2 pb-2">
                <div class="col-12 text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Product
                    </a>
                </div>
            </div>

            <table id="tblData" class="table table-bordered table-striped" style="100%">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Author
                        </th>
                        <th>
                            ISBN
                        </th>
                        <th>
                            Category
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}



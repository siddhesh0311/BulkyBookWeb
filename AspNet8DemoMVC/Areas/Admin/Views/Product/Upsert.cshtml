@model ProductVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Products.Id != 0 ? "Update" : "Create") Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Products.Id" hidden />
            <input asp-for="Products.ImageURL" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">

                        <div class="form-floating py-2 col-12">
                            <input asp-for=Products.Title type="text" class="form-control border-0 p-2 shadow" />
                            <label asp-for=Products.Title class="ms-2"></label>
                            <span asp-validation-for="Products.Title" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for=Products.Author type="text" class="form-control border-0 p-2 shadow" />
                            <label asp-for=Products.Author class="ms-2"></label>
                            <span asp-validation-for="Products.Author" class="text-danger"></span>
                        </div>
                        <div class="py-3 col-12">
                            <textarea asp-for=Products.Description type="text" class="form-control border-0 p-3 shadow"></textarea>
                            <label asp-for=Products.Description class="ms-2 text-muted"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for=Products.ISBN type="text" class="form-control border-0 p-2 shadow" />
                            <label asp-for=Products.ISBN class="ms-2"></label>
                            <span asp-validation-for="Products.ISBN" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for=Products.ListPrice type="text" class="form-control border-0 p-2 shadow" />
                            <label asp-for=Products.ListPrice class="ms-2"></label>
                            <span asp-validation-for="Products.ListPrice" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for=Products.Price type="text" class="form-control border-0 p-2 shadow" />
                            <label asp-for=Products.Price class="ms-2"></label>
                            <span asp-validation-for="Products.Price" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for=Products.Price50 type="text" class="form-control border-0 p-2 shadow" />
                            <label asp-for=Products.Price50 class="ms-2"></label>
                            <span asp-validation-for="Products.Price50" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for=Products.Price100 type="text" class="form-control border-0 p-2 shadow" />
                            <label asp-for=Products.Price100 class="ms-2"></label>
                            <span asp-validation-for="Products.Price100" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Products.CategoryId" asp-items="@Model.CategoryList" type="text" class="form-control border-0 p-2 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for=Products.CategoryId class="ms-2"></label>
                            <span asp-validation-for=Products.CategoryId class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="formFile" class="form-control border-0  shadow" />
                            <label asp-for=Products.ImageURL class="ms-2"></label>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.Products.Id != 0)
                                {
                                    @* <input class="btn btn-primary form-control" name="Update" type="submit" /> *@
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    @* <input class="btn btn-primary form-control" name="Create" type="submit" /> *@
                                    <button type="submit" class="btn btn-primary form-control">Create</button>

                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-action="Index" asp-controller="Product" class="btn btn-outline-primary border-2 form-control">back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <img src="@Model.Products.ImageURL" width="100%"
                         style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: [
                // Core editing features
                'anchor', 'autolink', 'charmap', 'codesample', 'link', 'lists', 'visualblocks', 'wordcount',

            ],
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table mergetags | addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap | removeformat',

        });
    </script>
    @{
        <partial name="_validationScriptsPartial" />
    }
}


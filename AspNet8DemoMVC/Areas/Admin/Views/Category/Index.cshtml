@model List<Category>

<div class="toast align-items-left text-white bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body">
            <partial name="_PartialNotificationView" />
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Category List </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="container">

            <div class="row m-2 pt-2 pb-2">

                <div class="col-12 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add New Category
                    </a>
                </div>
            </div>

            <table class="table table-bordered table-striped" style="border:solid 2px black;">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Display Order
                        </th>
                        <th colspan="2">
                            <div style="display:flex;justify-content:center;">
                                Action
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Category category in Model)
                    {
                        <tr>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                @category.DisplayOrder
                            </td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-outline-warning">
                                    <i class="bi bi-pen-fill"></i> Edit
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-x-circle-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



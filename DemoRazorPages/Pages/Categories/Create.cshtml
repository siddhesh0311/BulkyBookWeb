@page
@model DemoRazorPages.Pages.Categories.CreateModel

<form method="post">
    <div class="border p-2 mt-4">
        <div class="row pt-2">
            <h2 class="text-primary">
                Create Category
            </h2>
        </div>
        <div class="mb-3 row p-3">
            <label asp-for="category.Name" class="text-primary p-2"></label>
            <input asp-for="category.Name" type="text" class="form-control p-2" />
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-3">
            <label asp-for="category.DisplayOrder" class="text-primary p-2"></label>
            <input asp-for="category.DisplayOrder" type="text" class="form-control p-2" />
            <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <input class="btn btn-primary form-control" name="Submit" type="submit" />
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-outline-secondary border-2 form-control">back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_validationScriptsPartial" />
    }
}

